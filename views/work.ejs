<%- include("./parcials/header.ejs") %>

    <body>
        <main>
            <div class="box" id="heading">
                <h1>
                    Work List
                </h1>
            </div>
            <div class="box" id="box">
                <% if (locals.todoArrayWork) {%>
                    <% todoArrayWork.forEach((item)=> { %>
                        <div class="item">
                            <input type="checkbox">
                            <p>
                                <%= item %>
                            </p>
                        </div>
                        <% }); %>
                            <% } else { %>

                                <% } %>
                                    <form class="item" action="/work" method="post">
                                        <input type="text" name="newItem" placeholder="New Item" autocomplete="off" />
                                        <button type="submit" name="list" value=Work, list>+</button>
                                    </form>
        </main>
    </body>

